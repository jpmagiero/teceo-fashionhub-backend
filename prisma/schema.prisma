generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  items Item[]
}

model Item {
  id         Int      @id @default(autoincrement())
  name       String
  brand      String?
  size       String?
  color      String?
  status     String
  price      Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

enum ItemStatus {
  em_estoque
  utimas_unidades
  fora_de_estoque
}
